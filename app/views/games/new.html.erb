<div class="container">
  <h1>New Game</h1>

  <p class="" ><%="The Letters are: #{@letters}" %></p>

  <form action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag 'letters', @letters %>
    <p>What is the longest word you can find</p>
    <div class="input-group mb-3">
      <input type="text" class="form-control" name="word" aria-describedby="button-addon2">
      <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Play</button>
    </div>
  </form>
</div>
